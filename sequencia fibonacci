    public static void main(String[] args) {
        int next = 19 + 1; // próximo número, seguindo padrão da sequência
        System.out.println("Próximo número: " + next);
    }
}
public class IdentificarInterruptores {
    public static void main(String[] args) {
        // Descreva o procedimento em comentários
        System.out.println("1. Ligue o primeiro interruptor e deixe-o ligado por um tempo.");
        System.out.println("2. Desligue o primeiro interruptor e ligue o segundo interruptor.");
        System.out.println("3. Vá até as lâmpadas:");
        System.out.println("   - A lâmpada que está acesa é controlada pelo segundo interruptor.");
        System.out.println("   - A lâmpada que está apagada e quente é controlada pelo primeiro interruptor.");
        System.out.println("   - A lâmpada que está apagada e fria é controlada pelo terceiro interruptor.");
    }
}
